import rospy
import pyqtgraph as pg
import sys
import pickle
from std_msgs.msg import Float32MultiArray, Float32
from PyQt5.QtGui import *
from PyQt5.QtCore import *

from PyQt5.QtWidgets import QApplication, QMainWindow

import csv
import os
sys.path.append(os.path.dirname(os.path.abspath(os.path.dirname(__file__))))
#from pathlib import Path

class Window(QMainWindow):
    def __init__(self):
        super(Window, self).__init__()
        self.setWindowTitle("Steps to Goal Result")
        self.setGeometry(50, 50, 600, 650)
        self.graph_sub = rospy.Subscriber('steps_to_goal_result', Float32MultiArray, self.data)
        self.ep = []
        # self.data = []
        self.stepsGoals = []
        self.AvestepsGoals = []
        self.x = []
        self.count = 1
        self.size_ep = 0

        self.CSVSavePath = os.path.dirname(os.path.realpath(__file__))
        self.CSVSavePath = self.CSVSavePath.replace('src/turtlebot3_machine_learning/turtlebot3_dqn/nodes', 'turtlebot3_dqn_results_data/CSV_Stage_2/')
    	#self.CSVSavePath = self.CSVSavePath.replace('src/turtlebot3_machine_learning/turtlebot3_dqn/nodes', 'CSV_Stage_1/')
    	#os.makedirs(self.CSVSavePath, exist_ok=True)

        try:
            os.makedirs(self.CSVSavePath)
        except OSError as e:
            #print("CSV Directory exists")
            pass

        #load_data = False
        load_data = True

        if load_data:
            # self.ep, self.data, self.stepsGoals, self.AvestepsGoals = self.load_data()
            self.ep, self.stepsGoals, self.AvestepsGoals = self.load_data()
            self.size_ep = len(self.ep)
        self.plot()

    def data(self, data):
        self.stepsGoals.append(data.data[0])
        self.ep.append(self.size_ep + self.count)
        self.count += 1
        self.AvestepsGoals.append(data.data[1])


    def plot(self):

        self.stepsGoalsPlt = pg.PlotWidget(self, title="Steps to Goal")
        self.stepsGoalsPlt.move(0, 640)
        self.stepsGoalsPlt.resize(600, 300)
        self.timer1 = pg.QtCore.QTimer()
        self.timer1.timeout.connect(self.update)
        self.timer1.start(100)

        self.AvestepsGoalsPlt = pg.PlotWidget(self, title="Average Steps to Goal")
        self.AvestepsGoalsPlt.move(0, 320)
        self.AvestepsGoalsPlt.resize(600, 300)
        self.timer2 = pg.QtCore.QTimer()
        self.timer2.timeout.connect(self.update)
        self.timer2.start(0)

        self.show()

    def update(self):
        self.stepsGoalsPlt.showGrid(x=True, y=True)
        self.AvestepsGoalsPlt.showGrid(x=True, y=True)

        self.stepsGoalsPlt.plot(self.ep, self.stepsGoals, pen=(255, 0, 0))

        fields = list(self.ep)

        with open(self.CSVSavePath + "Stage" + "_" + "2" + "_" + "Steps_to_Goal" +  ".csv", "w") as f:
            # using csv.writer method from CSV package
            write = csv.writer(f)

            row = []
            row.append("Successful Episodes")
            row.append("Steps to Goal")
            # row.append("Days")
            # row.append("Hours")
            # row.append("Minutes")
            # row.append("Seconds")
            write.writerow(row)

            for i in range(len(fields)):
                row = []
                row.append(fields[i])
                row.append(self.stepsGoals[i])
                write.writerow(row)

        self.save_data([self.ep, self.stepsGoals, self.AvestepsGoals])


        self.AvestepsGoalsPlt.plot(self.ep, self.AvestepsGoals, pen=(0, 255, 0))

        with open(self.CSVSavePath + "Stage" + "_" + "2" + "_" + "Ave_Steps_to_Goal" +  ".csv", "w") as f:
            # using csv.writer method from CSV package
            write = csv.writer(f)

            row = []
            row.append("Successful Episodes")
            row.append("Average Steps to Goal")
            # row.append("Days")
            # row.append("Hours")
            # row.append("Minutes")
            # row.append("Seconds")
            write.writerow(row)

            for i in range(len(fields)):
                row = []
                row.append(fields[i])
                row.append(self.AvestepsGoals[i])
                write.writerow(row)

    def load_data(self):
        try:
            with open(self.CSVSavePath + "steps_to_goal_graph.txt", "rb") as f:
                x, y, z = pickle.load(f)
        except:
            x, y, z = [], [], []
        return x, y, z

    def save_data(self, data):
        with open(self.CSVSavePath + "steps_to_goal_graph.txt", "wb") as f:
            pickle.dump(data, f)


def run():
        rospy.init_node('result_graph_stage_2_exclude_failed_case_steps_to_goal')
        app = QApplication(sys.argv)
        GUI = Window()
        sys.exit(app.exec_())

run()
